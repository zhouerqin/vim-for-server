# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python, Java, JavaScript, HTML, CSS, XML, PHP files
[*.{py,java,js,html,css,xml,php}]
indent_style = space
indent_size = 4

# Shell, Markdown, YAML files
[*.{sh,md,yml,yaml}]
indent_style = space
indent_size = 2
